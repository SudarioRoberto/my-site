<!-- src/components/Navbar.astro -->
<nav class="w-full px-6 md:px-20 py-4 fixed top-0 left-0 z-50 backdrop-blur-md bg-black/30 border-b border-white/10 shadow-md animate-fade-in">
  <div class="flex justify-between items-center">
    <a href="#hero" class="text-2xl font-bold text-white tracking-wide">AlphaBioma</a>
    
    <!-- Menu para desktop -->
    <div class="hidden md:flex gap-6 text-white text-base">
      <a href="#services" class="hover:text-blue-300">Serviços</a>
      <a href="#about" class="hover:text-blue-300">Sobre</a>
      <a href="#benefits" class="hover:text-blue-300">Por Que Escolher a AlphaBioma</a>
      <a href="#insights" class="hover:text-blue-300">Insights</a>
      <a href="/login" class="hover:underline hover:text-blue-400 transition">Login</a>
    </div>
    
    <!-- Botão de contato para desktop -->
    <a href="#contact" class="hidden md:inline-block px-4 py-2 border border-white text-white rounded-full hover:bg-white hover:text-black transition">Fale Conosco</a>
    
    <!-- Botão de menu móvel -->
    <button id="mobileMenuButton" class="md:hidden text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Menu móvel (oculto por padrão) -->
  <div id="mobileMenu" class="md:hidden hidden bg-black/90 mt-4 rounded-lg p-4 animate-fade-in">
    <div class="flex flex-col gap-4">
      <a href="#services" class="text-white hover:text-blue-300 py-2">Serviços</a>
      <a href="#about" class="text-white hover:text-blue-300 py-2">Sobre</a>
      <a href="#benefits" class="text-white hover:text-blue-300 py-2">Por Que Escolher a AlphaBioma</a>
      <a href="#insights" class="text-white hover:text-blue-300 py-2">Insights</a>
      <a href="/login" class="text-white hover:text-blue-300 py-2">Portal do Cliente</a>
      <a href="/admin" class="text-white hover:text-blue-300 py-2">Admin</a>
      <a href="#contact" class="text-white hover:text-blue-300 py-2 border border-white px-4 rounded-full text-center">Fale Conosco</a>
    </div>
  </div>
</nav>

<script>
// JavaScript para controlar o menu móvel
document.addEventListener('DOMContentLoaded', () => {
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Fechar o menu quando clicar em um link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
  
  // Adicionar classe ao scroll
  const navbar = document.querySelector('nav');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      navbar.classList.add('bg-black/60');
      navbar.classList.remove('bg-black/30');
    } else {
      navbar.classList.add('bg-black/30');
      navbar.classList.remove('bg-black/60');
    }
  });
});
</script>

<style>
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.animate-fade-in {
  animation: fade-in 0.3s ease-out forwards;
}
</style>