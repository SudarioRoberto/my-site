---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import Benefits from '../components/Benefits.astro';
import Insights from '../components/Insights.astro'
import ClientLogos from '../components/ClientLogos.astro';
import MicrobiomeIntro from '../components/MicrobiomeIntro.astro';
import Team from '../components/Team.astro';
import Layout from '../layouts/Layout.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AlphaBioma</title>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 0.5; }
      }
    </style>
  </head>
  <body class="relative bg-gradient-to-br from-blue-950 to-black text-white font-sans">
	<video autoplay muted loop playsinline
  class="fixed top-0 left-0 w-full h-full object-cover z-0 opacity-30 pointer-events-none">
  <source src="/video/dna.mp4" type="video/mp4" />
</video>
    <Navbar />
    <main class="space-y-20 relative z-10">
		<Layout>
		<Hero />
	  <MicrobiomeIntro />
      <Services />
      <About />
	  <Team />
	  <Benefits/>
	  <Insights/>
      <Contact />
      <ClientLogos />
	  <Footer />
    </main>
  </body>
</html>