---

import Layout from '../../layouts/Layout.astro';

---

<Layout>
  <section class="min-h-screen bg-white text-black px-6 py-12">
    <div class="max-w-2xl mx-auto space-y-6 text-center">
      <h1 class="text-3xl font-bold text-blue-900">Painel Administrativo</h1>
      <p class="text-lg text-gray-600">Crie novos projetos e gere QR Codes para cada amostra.</p>
      <a href="/admin/create" class="inline-block mt-6 bg-blue-900 text-white px-6 py-3 rounded-xl hover:bg-blue-800 transition">
        Criar Novo Projeto
      </a>
    </div>
  </section>
</Layout>
