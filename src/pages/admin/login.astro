---
// src/pages/admin/login.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <section class="min-h-screen flex items-center justify-center bg-white text-black px-4">
    <form method="POST" action="/api/admin-login" class="w-full max-w-sm bg-gray-100 p-6 rounded-lg shadow space-y-6">
      <h1 class="text-2xl font-bold text-center text-blue-900">Login Administrativo</h1>

      <div>
        <label for="email" class="block text-sm font-semibold mb-1">Email</label>
        <input type="email" name="email" id="email" required class="w-full p-3 rounded border border-gray-300" />
      </div>

      <div>
        <label for="password" class="block text-sm font-semibold mb-1">Senha</label>
        <input type="password" name="password" id="password" required class="w-full p-3 rounded border border-gray-300" />
      </div>

      <button type="submit" class="w-full bg-blue-900 text-white p-3 rounded hover:bg-blue-800 transition">Entrar</button>
    </form>
  </section>
</Layout>
